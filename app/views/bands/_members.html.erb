<tr>
  <td><%= members.name || '-' %></td>
  <td><%= members.instrument || '-' %></td>
  <td><%= members.gear || '-' %></td>
  <td> 
    <% if !members.special_food %>
      <i class="fa fa-times"></i>
    <% else %>
      <i class="fa fa-check"></i>
    <% end %>
  </td>
  <td>
    <a><i data-js="members" class="fa fa-pencil"></i>
    <%= link_to user_band_member_path(band_id: @band.id ,id: members.id),
  controller: :members, method: :delete, data: {confirm: 'Are you sure?'} do %>
    <i class="fa fa-trash"></i>
  <% end %>
  </td>
</tr>
