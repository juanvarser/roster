<section class="is-window-centered">
  <div class="hero-content">
    <div class="columns">
      <div class="column is-half is-offset-quarter">
        <h1 class="title is-text-centered">
          Edit <%= resource_name.to_s.humanize %>
        </h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email, class:'title is-5' %><br />
          <%= f.email_field :email, autofocus: true, class:"input is-margin-bottom" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password, class:'title is-5' %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "off", class:"input is-margin-bottom"  %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class:'title is-5' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"input is-margin-bottom"  %>
        </div>

        <div class="field">
          <%= f.label :current_password, class:'title is-5' %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off", class:"input is-margin-bottom" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class:"button is-primary is-fullwidth is-margin-bottom" %>
        </div>
      <% end %>

      <h1 class="title is-text-centered">Cancel my account</h1>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"button is-primary is-fullwidth" %></p>

      <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</section>
