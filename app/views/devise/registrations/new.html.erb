<section class="is-window-centered">
  <div class="hero-content">
    <div class="columns">
      <div class="column is-half is-offset-quarter">
        <h1 class="title is-text-centered">
          Sign up
        </h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class:"input is-margin-bottom"  %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class:"input is-margin-bottom"  %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class:"input is-margin-bottom"  %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"input is-margin-bottom"  %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
