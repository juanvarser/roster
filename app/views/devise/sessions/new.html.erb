<section class="is-window-centered">
  <div class="hero-content">
    <div class="columns">
      <div class="column is-half is-offset-quarter">
        <h1 class="title is-text-centered">
          Login
        </h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class:'title is-5' %><br />
            <%= f.email_field :email, autofocus: true, class:"input is-margin-bottom"  %>
          </div>

          <div class="field">
            <%= f.label :password, class:'title is-5' %><br />
            <%= f.password_field :password, autocomplete: "off", class:"input is-margin-bottom"  %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me, class:"checkbox" %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class:"button is-primary is-fullwidth" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
