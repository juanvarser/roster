<section class="hero is-left">
  <div class="hero-band-background is-hero-band-image" style="background-image:url(<%= @venue.image.url %>")></div>
  <div class="hero-band-background is-hero-band-gradient is-gradient"></div>
  <div class="hero-content">
    <div class="container is-fluid" data-js="name-content">
      <h1 class="title is-1 artist-page-title" data-js="name">
        <%=@venue.name%>
      </h1>
      <i data-js="name" class="fa fa-pencil is-update-hero-button"></i>
    </div>
  </div>
</section>
<div class="container">
  <div class="columns is-wrap is-columns-margin">	
  	<div class="column is-4">
  		<%= image_tag @venue.image %>
      <p class="control">
        <a class="button is-success is-fullwidth">Update Picture</a>
      </p>
      <p class="control"> 
        <a class="button is-danger is-fullwidth" data-method="DELETE" data-confirm="Are you sure?" href=<%="#{user_venue_path}"%>>Delete</a>
      </p>
  	</div>
  	<div class="column is-8">
  		<div class="content">
        
        <h1 class="title is-3" data-js="address-content">
          Address
          <i data-js="address" class="fa fa-pencil is-update-content-button"></i>
        </h1>
        <p><strong>Street:</strong></p>
        <p data-js="address"><%= @venue.address %></p>
        <p><strong>City:</strong></p>
        <p data-js="city"><%= @venue.city %></p>
      </div>
      <hr>
      <div class="content">
        <h1 class="title is-3" data-js="cache-content">
          Cache
          <i data-js="cache" class="fa fa-pencil is-update-content-button" onclick="handleVenueCache()"></i>
        </h1>
        <p data-js="cache"><%= @venue.cache %> â‚¬</p>
      </div>
      <hr>
      <div class="content">
        <h1 class="title is-3" data-js="contact-content">
          Contact name:
          <i data-js="contact" class="fa fa-pencil is-update-content-button"></i>
        </h1>
        <p><strong>Contact Name:</strong></p>
        <p data-js="contact-name"><%= @venue.contact_name %></p>
        <p><strong>Phone Number:</strong></p>
        <p data-js="contact-phone"><%= @venue.phone %></p>
        <p><strong>Email:</strong></p>
        <p data-js="contact-email"><%= @venue.email %></p>
      </div>
      <hr>
  	</div>
  </div>
</div>
