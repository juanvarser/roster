<%= form_for [current_user, @band, @product] do |f| %>
  <tr>
  	<td><%= f.file_field :image, class:"input" %></td>
    <td><%=f.text_field :name, placeholder:"Vinyl 7", class: "input" %></td>
    <td><%= f.text_field :price, placeholder:"10", class: "input" %></td>
    <td><%= f.number_field :quantity,placeholder:"10", class: "input"  %></td>
    <td><%= f.submit 'Save', class:"button is-primary" %></td>
  </tr>
<% end %>