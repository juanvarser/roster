<div class="column is-4">
	<div class="card">
	  <div class="card-image">
	    <figure class="image is-4by3">
	      <a href="<%=user_band_event_path(user_id:@user.id, band_id:@band.id, id: event.id) %>">
	      	<%= image_tag event.image %>
	      </a>
	    </figure>
	    <div class="event-date is-text-centered is-lighter-color">
				<p class="title is-5 is-text-bold"><%= event.date.strftime("%e %b") %></p>
				<p class="subtitle is-6"><%= event.time.strftime("%H:%M h") %></p>
	    </div>
	  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-content">
      	<a href="<%=user_band_event_path(user_id:@user.id, band_id:@band.id, id: event.id) %>">
        	<p class="title is-4 is-text-bold card-title-ellipsis">
        		<%= get_venue_name(event.venue_id) %>
        	</p>
        </a>
        <p class="subtitle is-6"><%= get_venue_address(event.venue_id) + ', ' + get_venue_city(event.venue_id) %></p>
        <p class="content">Tickets: <%= event.price %>â‚¬</p>
      </div>
   	</div>
  </div>
</div>
</div>